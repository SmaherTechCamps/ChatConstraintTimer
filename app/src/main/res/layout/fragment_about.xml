<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="developer.mohammedalbosifi.ly.newchattimer.UI.About.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt"
            android:background="@drawable/background_with_shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:textColor="@color/TEAL"
            android:textSize="20sp"
            android:text="حول التطبيق"/>
        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="1500"
            app:el_expanded="true"
            android:layout_marginTop="@dimen/_5sdp"
            app:el_parallax="0.5"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    app:srcCompat="@drawable/ic_tablet"/>
                <TextView
                    android:padding="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:textSize="@dimen/_13sdp"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/colorPrimary"
                    android:text="هو تطبيق يتيح لك تنظيم ومراقبة فترات أستخدامك لأحد برامج الشات او المراسلة ، ويمكنك من تحديد الوقت اللازم لاستخدام اي من هذه التطبيقات
كذلك يقوم بحساب معدل أستخدام لكل تطبيقات بقيم تقريبية شهرية - يومية"
/>            </LinearLayout>
        </net.cachapa.expandablelayout.ExpandableLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt2"
            android:background="@drawable/background_with_shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:textColor="@color/TEAL"
            android:textSize="20sp"
            android:text="حول المطورين"/>
        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandable_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="1500"
            app:el_expanded="false"
            android:layout_marginTop="@dimen/_10sdp"
            app:el_parallax="0.5"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    app:srcCompat="@drawable/ic_teamwork_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_15sdp"
                    android:lineSpacingMultiplier="2"
                    android:text="قام بالعمل علي هذا التطبيق وأنجازة الطالبتان :
حوا صالح أحمد أرضي      02120516
صالحة أبوبكر محمد علي   02120356"
                    />
             </LinearLayout>
        </net.cachapa.expandablelayout.ExpandableLayout>
    </LinearLayout>
</LinearLayout>
